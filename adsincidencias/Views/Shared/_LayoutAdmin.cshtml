            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-lefth">
                   <li class="nav"><a href=@Url.Action("Index","Registros")>Registros</a></li>
                </ul>
                <ul class="navbar-nav navbar-right">
                    <li class="nav"><a id="Login" class="drop-down-toggle btn btn-default" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-user"></span>&nbsp;@ViewBag.user</a>
                        <ul class="dropdown-menu">
                            <li><a href=@Url.Action("Index","Index")>Salir</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
